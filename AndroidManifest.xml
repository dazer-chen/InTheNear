<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hfoster.android.inthenear"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    
    <uses-sdk android:minSdkVersion="7" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <uses-library android:name="com.google.android.maps" />
        <activity
            android:label="@string/app_name"
            android:name=".ITNEntryPointActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:label="@string/app_name"
            android:name=".ITNGoogleMapActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
        
        <activity
            android:label="@string/app_name"
            android:name=".ITNLocationListView"
            android:theme="@android:style/Theme.Light" >
            <intent-filter >
                <action android:name="hfoster.android.inthenear.intent.action.SHOW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
         </activity>
        
        <activity
            android:label="@string/app_name"
            android:name=".ITNAddLocationActivity" >
            <intent-filter >
                <action android:name="hfoster.android.inthenear.intent.action.ADD_LOCATION" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        </application>

</manifest>